<?xml version="1.0" encoding="UTF-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Super SQL Plux" Height="300" Width="300">
    
    <Grid>
        <TextBox Height="55" Margin="25,43,20,0" Name="consulta" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto" Background="LightGray" />
        <Label Height="35" Margin="71,0" Name="label1" VerticalAlignment="Top" ClipToBounds="False" FontSize="18">
            <Label.BitmapEffect>
                <EmbossBitmapEffect />
            </Label.BitmapEffect> Super SQL Plux
        </Label>
        <Button Margin="25,103,0,0" Name="boton" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75">Aceptar</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,103,20,0" Name="button2" VerticalAlignment="Top" Width="75">Reset</Button>
        <ListView Margin="25,145,20,16.67" Grid.Column="0" Name="resultado"
            ItemsSource="{Binding Path=TablaProductos}">
            
        </ListView>
    </Grid>
   
</Window>
